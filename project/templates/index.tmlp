  content: "=";
  font-size: 36px;
  top: 30px;
  left: -40px;
  position: absolute;
}

.info__how-scheme-icon:hover::after {
  opacity: 0.6;
  background-color: rgba(0, 0, 0, 0.38);
}

.info__how-scheme-icon:active::after {
  opacity: 0.3;
  background-color: rgba(0, 0, 0, 0.38);
