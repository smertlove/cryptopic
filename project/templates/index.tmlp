}

.encryption_toggle ~ .encryption_toggle-label:after {
  font-size: 20px;
  content: attr(data-off);
}

.encryption_input-wrapper {
  display: grid;
  grid-template-columns: 1fr 500px 1fr;
  align-items: center;
  gap: 20px;
  height: 300px;
