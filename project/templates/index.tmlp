}

.info__how-scheme-icon::after {
  content: attr(data-count);
  font-size: 36px;
  position: absolute;
  bottom: 0;
  left: 20px;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.info__how-scheme-icon:nth-child(2)::before {
  content: "+";
  font-size: 36px;
  top: 30px;
  left: -40px;
  position: absolute;
}

